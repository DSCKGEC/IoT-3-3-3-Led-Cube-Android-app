<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_launcher_foreground" android:tileMode="repeat"/>
            </item>
            <item >
                <shape android:shape="oval" >
                    <solid android:color="#f2f3f3" />
                    <stroke android:width="1dp"
                        android:color="#e7e7e6" />
                    <size android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>
            </layer-list>
    </item>

    <item android:state_checked="true">
            <layer-list>
                <item>
                    <bitmap android:gravity="center" android:src="@drawable/ic_baseline_bedtime_24" android:tileMode="repeat"/>
                </item>

                <item>
    <shape android:shape="oval">
        <solid android:color="#343534"/>
        <stroke android:width="1dp"
            android:color="#5b5a5b"/>
        <size android:width="50dp"
            android:height="50dp"/>

    </shape>
    </item>
    </layer-list>
    </item>
</selector>